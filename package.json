{
	"name": "asteroid-typescript",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "parcel src/index.html",
		"dev:debug": "cross-env DEBUGGER=\"true\" parcel src/index.html",
		"clear-cache": "rm -rf .cache/",
		"build": "parcel build src/index.html",
		"publish": "npm run build && surge ./dist asteroid-blast.surge.sh",
		"__compile:ts": "tsc -p tsconfig.release.json",
		"__compile:ts:watch": "tsc -w -p tsconfig.release.json",
		"format": "prettier \"src/**\" --write",
		"__format:debug": "prettier \"src/**\" --list-different",
		"lint": "tslint --format stylish --project tsconfig.json",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"test:watchAll": "jest --watchAll"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"src/*.ts": [
			"npm run format",
			"git add"
		]
	},
	"devDependencies": {
		"@types/dotenv": "^6.1.0",
		"@types/jest": "^23.3.8",
		"cross-env": "^5.2.0",
		"husky": "^1.1.2",
		"jest": "^23.6.0",
		"lint-staged": "^8.0.2",
		"parcel-bundler": "^1.10.3",
		"prettier": "^1.14.3",
		"ts-jest": "^23.10.4",
		"tslint": "^5.11.0",
		"tslint-config-airbnb": "^5.11.0",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^3.1.3"
	},
	"dependencies": {}
}
